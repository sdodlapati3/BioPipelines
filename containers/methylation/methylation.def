Bootstrap: localimage
From: /scratch/sdodl001/containers/base_1.0.0.sif

%labels
    org.opencontainers.image.version="1.0.0"
    org.opencontainers.image.authors="BioPipelines Team"
    org.opencontainers.image.title="BioPipelines Methylation Container"
    org.opencontainers.image.description="DNA methylation analysis with Bismark, methylKit, and WGBS tools"
    pipeline.name="methylation"
    pipeline.version="1.0.0"

%files
    entrypoint.sh /opt/biopipelines/entrypoint.sh
    run_pipeline.sh /opt/biopipelines/run_pipeline.sh

%post
    # Install methylation specific tools (common tools now in base)
    micromamba install -y -n base -c conda-forge -c bioconda \
        bismark=0.24.2 \
        bwameth \
        methyldackel=0.6.1 \
        trim-galore=0.6.10 \
        qualimap=2.3 \
        bioconductor-methylkit \
        bioconductor-bsseq \
        bioconductor-dmrcate

    # Make scripts executable
    chmod +x /opt/biopipelines/entrypoint.sh /opt/biopipelines/run_pipeline.sh
    
    # Create pipeline directory
    mkdir -p /opt/biopipelines/methylation

    # Clean up
    micromamba clean --all --yes

%environment
    export PIPELINE_NAME="methylation"
    export PIPELINE_VERSION="1.0.0"

%runscript
    exec /opt/biopipelines/entrypoint.sh "$@"

%test
    # Test methylation tools
    bismark --version
    trim_galore --version
    MethylDackel --version 2>&1 | head -1 || true
    echo "Methylation container validation passed"
