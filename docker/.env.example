# BioPipelines Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_USER=biopipelines
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=biopipelines
DATABASE_URL=postgresql://biopipelines:your_secure_password_here@localhost:5432/biopipelines

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Application Settings
APP_ENV=development
LOG_LEVEL=DEBUG
API_PORT=8000
FLOWER_PORT=5555

# API Security
API_KEY_PREFIX=bpa_
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Worker Configuration
WORKER_REPLICAS=2

# LLM API Keys (add yours)
# =======================
# Get API keys from the URLs below. Most have FREE tiers!

# TIER 1: Best Free Tiers (Recommended - start here!)
# ---------------------------------------------------
# Google AI Studio (Gemini) - FREE: 250 req/day, 1M tokens
# Get key: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# Cerebras - FREE: 14,400 req/day, 1M tokens (most generous!)
# Get key: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=

# Groq - FREE: 1,000+ req/day, FASTEST inference
# Get key: https://console.groq.com/keys
GROQ_API_KEY=

# OpenRouter - FREE: 50 req/day on :free models (400+ models available)
# Get key: https://openrouter.ai/settings/keys
OPENROUTER_API_KEY=

# TIER 2: Additional Options
# --------------------------
# Lightning.ai - DeepSeek V3 and other models
LIGHTNING_API_KEY=

# GitHub Token (for GitHub Models - free with Copilot subscription)
# Works with: GPT-4o, DeepSeek-R1, Llama-3.3
GITHUB_TOKEN=

# TIER 3: Paid Providers (fallback)
# ---------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Optional: HPC/SLURM Configuration
SLURM_ACCOUNT=
SLURM_PARTITION=
